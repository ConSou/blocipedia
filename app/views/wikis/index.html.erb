
<% if policy(:wiki).create? %>
  <h1>Wikis <%=link_to "Create Wiki", new_wiki_path, class: "btn btn-default pull-right" %></h1>
<% end %>

<div>
<% @wikis.each do |wiki| %>
<% if wiki.private == false %>
<h4>
  <%= link_to wiki.title, wiki %>
</h4>
<small>
  Submitted by: <%= wiki.user.email %>
</small>
<% end %>
<% end %>
</div>

<% if current_user && current_user.wikis.count > 0%>
<div>
  <h2> Your Collab Wikis </h2>
  <% current_user.wikis.each do |pwiki| %>
  <h4>
    <%= link_to pwiki.title, pwiki %>
  </h4>
  <small>
    Submitted by: <%= pwiki.user.email %>
  </small>
  <% end %>
</div>
<% end %>
