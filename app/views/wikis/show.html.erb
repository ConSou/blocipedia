<h1 class="page-header"><%= @wiki.title %></h1>

<div class="jumbotron">
<%= markdown(@wiki.body) %>
</div>

<% if current_user == @wiki.user %>
  <%= link_to "Delete Wiki", @wiki, method: :delete, class: "btn btn-danger pull-right", data: {confirm: "Are you sure you want to delete wiki?"} %>
<% end %>
<% if policy(:wiki).edit? %>
  <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: "btn btn-success" %>
<% end %>
